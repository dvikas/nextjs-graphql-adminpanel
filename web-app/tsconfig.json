{
    "compilerOptions": {
        "allowJs": true,
        // "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2015",
        "types": [
            "node",
            "jest",
            "@emotion/core"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "types/typeDefs/next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
}